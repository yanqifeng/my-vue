{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "vue": [
                "src/platforms/web/entry-runtime-with-compiler"
            ],
            "compiler/*": [
                "src/compiler/*"
            ],
            "core/*": [
                "src/core/*"
            ],
            "shared/*": [
                "src/shared/*"
            ],
            "web/*": [
                "src/web/*"
            ],
            "server/*": [
                "src/server/*"
            ],
            "sfc/*": [
                "src/sfc/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}
